{{>header}}

<section class="gradient-custom">
    <h3 class="text-center"
        style="background-color: #435D7D; color:white; padding: 5px 0px; font-family: 'Varela Round', sans-serif;">
        Update <strong>Employee</strong></h3>
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <p class="text-left" style="font-family: 'Varela Round', sans-serif;"> <a href="//localhost:3000"
                        style=" color: #435D7D">
                        << All employees </a>
                </p>
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">

                    <div class="card-body p-4 p-md-5">

                        <form action="/employee/update/{{id}}" method="POST">

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="firstName">Full Name</label>
                                        <input type="text" id="firstName" class="form-control form-control-lg"
                                            value="{{name}}" name="name" />
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="lastName">Email</label>
                                        <input type="email" id="lastName" class="form-control form-control-lg"
                                            value="{{email}}" name="email" />

                                    </div>

                                </div>
                            </div>

                            <div class="row-fluid">
                                <div class="mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <label for="birthdayDate" class="form-label">Address</label>
                                        <input type="text" class="form-control form-control-lg" id="address"
                                            value="{{address}}" name="address" />

                                    </div>

                                </div>

                            </div>

                            <div class="row">

                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="phoneNumber">Phone Number</label>
                                        <input type="tel" id="phoneNumber" class="form-control form-control-lg"
                                            value="{{phone}}" name="phone" />

                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="emailAddress">Gender</label> <br />
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender" id="maleRadio" value="Male" />
                                            <label class="form-check-label" for="maleRadio">
                                                Male
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender" id="femaleRadio" value="Female" />
                                            <label class="form-check-label" for="femaleRadio">
                                                Female
                                            </label>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <label class="form-label select-label">Choose option</label> &nbsp;
                                    <select class="select form-control-md p-1 rounded" role="button" name="active">
                                        <option class="text-success" value="true">Active</option>
                                        <option class="text-danger" value="false">Not Active</option>

                                    </select>


                                </div>
                            </div>

                            <div class="mt-4 pt-2">
                                <input class="btn btn-primary btn-lg" type="submit" value="Update"
                                    style="background-color: #435D7D; border: none" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



{{>footer}}