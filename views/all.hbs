{{>header}}

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <strong>Employees</strong></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="http://localhost:3000/employee/new" class="btn btn-success"><i
                                class="material-icons">&#xE147;</i> <span>Add New Employee</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Gender</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.address}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.gender}}</td>
                        {{#if this.active}}
                            <td><span class="text-light bg-success rounded p-1">{{this.active}}</span></td>
                        {{else}}
                           <td><span class="text-light bg-danger rounded p-1">{{this.active}}</span></td>
                        {{/if}}
                        <td>
                            <a href="//localhost:3000/employee/update" class="edit"><i class="material-icons"
                                    data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                            <a href="#deleteEmployeeModal" class="delete" data-toggle="modal"><i class="material-icons"
                                    data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                        </td>
                    </tr>
                    {{/each}}


                </tbody>
            </table>

        </div>
    </div>
</div>
